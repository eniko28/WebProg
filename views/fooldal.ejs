<!DOCTYPE html>
<html lang="hu">

<head>
    <meta charset="UTF-8" />
    <title>Fooldal</title>
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <button onclick="window.location.href='/tantargy'">Tantargy hozzaadasa</button>
    <button onclick="window.location.href='/felhasznalo'">Ki/Be Csatlakozas</button>
    <h2>Mar bevezetett tantargyak: </h2>
    <% tantargyak.forEach(function(item) { %>
        <div id="tantargy-<%= item.kod %>" onclick="showDetails(`<%= item.kod %>`)">
            <h2>
                <%= item.nev %>
            </h2>
            <p>Kód:<button onclick="showDetails(`<%= item.kod %>`)">
                    <%= item.kod %>
                </button></p>
            <p>Évfolyam: <%= item.evfolyam %>
            </p>
            <div id="details-<%= item.kod %>"></div>
            <button onclick="window.location.href='/allomany?id=<%= item.kod %>'">Tartalom/hozzaadas</button>
        </div>
        <% }); %>

            </div>
            <script src="./main.js"></script>
</body>

</html>