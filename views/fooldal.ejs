<!DOCTYPE html>
<html lang="hu">

<head>
    <meta charset="UTF-8" />
    <title>Fooldal</title>
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <button class="button-fooldal" onclick="window.location.href='/tantargy'">Tantárgy hozzáadása</button>
    <button class="button-fooldal" onclick="window.location.href='/felhasznalo'">Ki/Be Csatlakozás</button>
    <h1 class="nagy-cimek">Már bevezetett tantárgyak: </h1>
    <% tantargyak.forEach(function(item) { %>
        <div class="show-details" id="tantargy-<%= item.kod %>">
            <h2 id="tantargy-nev">
                <%= item.nev %>
            </h2>
            <p>Kód:
                <%= item.kod %>
            </p>
            <p>Évfolyam: <%= item.evfolyam %>
            </p>
            <div id="details-<%= item.kod %>"></div>
            <button class="button-fooldal"
                onclick="window.location.href='/allomany?id=<%= item.kod %>'">Állományok</button>
        </div>
        <% }); %>

            </div>
            <script src="./main.js"></script>
</body>

</html>